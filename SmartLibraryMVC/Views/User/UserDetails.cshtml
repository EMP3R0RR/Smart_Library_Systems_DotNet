
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model LibraryBLL.DTO.UserDTO

<h2>User Details</h2>

<table class="table table-bordered" border="1" cellpadding="5" cellspacing="0">
    <tr>
        <th>User ID</th>
        <td>@Model.UserID</td>
    </tr>
    <tr>
        <th>Full Name</th>
        <td>@Model.FullName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.Role</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt.ToString("yyyy-MM-dd")</td>
    </tr>
</table>
<a href="@Url.Action("AllUser", "User")" class="btn btn-secondary" style="margin-left: 10px;">Go Back</a>
<br />
<br />

<a class="btn btn-info btn-sm" href="@Url.Action("AdminUserBorrows", "Borrow", new { userId = Model.UserID })">See all Books Borrowed</a>
