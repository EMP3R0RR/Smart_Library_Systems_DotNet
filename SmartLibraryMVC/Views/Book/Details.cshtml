
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model LibraryBLL.DTO.BookDTO

<h2>Book Details</h2>

<table class="table table-bordered" border="1" cellpadding="5" cellspacing="0">
    <tr>
        <th>Book ID</th>
        <td>@Model.BookID</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Author</th>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <th>ISBN</th>
        <td>@Model.ISBN</td>
    </tr>
    <tr>
        <th>Category ID</th>
        <td>@Model.CategoryID</td>
    </tr>
    <tr>
        <th>Total Copies</th>
        <td>@Model.TotalCopies</td>
    </tr>
    <tr>
        <th>Available Copies</th>
        <td>@Model.AvailableCopies</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt.ToShortDateString()</td>
    </tr>
</table>

<br />

<a href="/Book/Index">Back to List</a>



