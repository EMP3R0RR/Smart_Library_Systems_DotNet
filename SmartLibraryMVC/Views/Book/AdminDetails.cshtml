
@{
    ViewBag.Title = "AdminDetails";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model LibraryBLL.DTO.BookDTO

<h2>Book Details</h2>

<table class="table table-bordered" border="1" cellpadding="5" cellspacing="0">
    <tr>
        <th>Book ID</th>
        <td>@Model.BookID</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Author</th>
        <td>@Model.Author</td>
    </tr>
    <tr>
        <th>ISBN</th>
        <td>@Model.ISBN</td>
    </tr>
    <tr>
        <th>Category ID</th>
        <td>@Model.CategoryID</td>
    </tr>
    <tr>
        <th>Total Copies</th>
        <td>@Model.TotalCopies</td>
    </tr>
    <tr>
        <th>Available Copies</th>
        <td>@Model.AvailableCopies</td>
    </tr>
    <tr>
        <th>Created At</th>
        <td>@Model.CreatedAt.ToShortDateString()</td>
    </tr>
</table>

<br />

<a class="btn btn-info btn-sm" href="/Book/AdminIndex">Back to List</a>
<a class="btn btn-info btn-sm" href="/Book/Edit/@Model.BookID">Edit Book Details</a>
<a class="btn btn-info btn-sm" href="@Url.Action("AdminBookBorrows", "Borrow", new { bookId = Model.BookID })">See all users</a>



